<h1>Dashboard</h1>
<h3>{{user.displayName}} Stories 📝</h3>

<section>
  {{#each stories}}
    <table class='striped'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Status</th>
          <th><!-- For delete and update --></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><a href='/stories/{{_id}}'>{{title}}</a></td>
          <td>{{formatDate createdAt}}</td>
          <td>
            <span class='dash-status'>{{status}}</span>
          </td>
          <td>
            <!-- Update Story Page -->
            <a href='/stories/edit/{{_id}}' class='btn btn-float'>
              <i class='fas fa-edit'></i>
            </a>
            <!-- Delete Story with Method override -->
            <form method='POST' action='/stories/delete/{{_id}}?_method=DELETE'>
              <button type='submit' class='btn red'>
                <i class='fas fa-trash'></i>
              </button>
            </form>
          </td>
        </tr>
      </tbody>
    </table>
  {{else}}
    <p>No stories yet.</p>
  {{/each}}
</section>