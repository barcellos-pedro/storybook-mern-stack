<h1>Dashboard</h1>
<h3>Welcome {{user.displayName}} 👋🏽</h3>

<section>
  {{#if stories.length}}
    <p>Here are your stories</p>
    <table class='striped'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Status</th>
          <th><!-- For delete and update --></th>
        </tr>
      </thead>
      <tbody>
        {{#each stories}}
          <tr>
            <td><a href='/stories/{{_id}}'>{{title}}</a></td>
            <td>{{createdAt}}</td>
            <td>
              <span class='dash-status'>{{status}}</span>
            </td>
            <td>
              <!-- Delete and Update -->
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No stories yet.</p>
  {{/if}}
</section>