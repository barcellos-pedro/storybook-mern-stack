<h1>Public Stories</h1>

<div class='row'>
  {{#each stories}}
    <div class='col s12 m4'>
      <div class='card'>
        <div class='card-image'>
          {{! TODO: edit icon only for user own story }}
        </div>
        <div class='card-content center-align'>
          <h5>{{title}}</h5>
          <p>{{! TODO: truncate and strip content }}{{body}}</p>
          <br />
          <div class='chip'>
            <img src='{{user.image}}' alt='{{user.displayName}} photo' />
            <a href='/stories/user/{{user._id}}'>{{user.displayName}}</a>
          </div>
        </div>
        <div class='card-action center-align'>
          <a href='/stories/{{_id}}' class='btn grey'>Read More...</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No stories to display</p>
  {{/each}}
</div>